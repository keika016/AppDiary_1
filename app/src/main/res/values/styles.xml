<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_mt_BluePrimary</item>
        <item name="colorPrimaryDark">@color/color_mt_BlueDark</item>
        <item name="colorAccent">@color/color_mt_BlueLight</item>
    </style>

    <style name="NavagitionDrawer_Text" >
        <item name="android:textColor">@color/colorDen</item>
